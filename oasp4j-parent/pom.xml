        <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>flatten-maven-plugin</artifactId>
        <version>1.0.0-beta-3-SNAPSHOT</version>
        <configuration>
        <flattenMode>oss</flattenMode>
        </configuration>
        <executions>
        <execution>
        <id>flatten</id>
        <phase>process-test-resources</phase>
        <goals>
        <goal>flatten</goal>
